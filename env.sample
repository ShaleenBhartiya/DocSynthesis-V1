# Environment Configuration for DocSynthesis-V1

# CUDA Configuration
CUDA_VISIBLE_DEVICES=0

# Model Paths
DEEPSEEK_MODEL=deepseek-ai/DeepSeek-OCR
INTERNVL_MODEL=OpenGVLab/InternVL2-8B

# Data Directories
DATA_DIR=./data
CACHE_DIR=./data/cache
LOG_DIR=./data/logs

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ENABLE_CORS=true

# Processing Configuration
BATCH_SIZE=4
BASE_SIZE=1024
IMAGE_SIZE=640
ENABLE_FLASH_ATTENTION=true

# Feature Flags
ENABLE_PREPROCESSING=true
ENABLE_WATERMARK_REMOVAL=true
ENABLE_GEOMETRIC_CORRECTION=true
ENABLE_TRANSLATION=true
ENABLE_XAI=true

# Optional: API Keys (if using external services)
# OPENAI_API_KEY=your_key_here
# HF_TOKEN=your_huggingface_token

# Logging Level
LOG_LEVEL=INFO

